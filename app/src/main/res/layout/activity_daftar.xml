<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".Daftar">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_login" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="339dp"
        android:layout_height="52dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#5EC401"
        android:drawableRight="@drawable/next"
        android:fontFamily="@font/poppins_bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="             S E L A N J U T N Y A                   "
        android:textAllCaps="true"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="342dp"
        android:layout_height="318dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Daftar Akun"
            android:textColor="#000000"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/TextInputDaftarNoHP"
            app:layout_constraintStart_toStartOf="@+id/TextInputDaftarNoHP"
            app:layout_constraintTop_toBottomOf="@+id/TextInputDaftarNoHP"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/daftar_password"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="30px"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="70px"
                android:paddingEnd="70px"
                android:password="true"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textColorHint="#615151"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputDaftarNoHP"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/TextInputDaftarUsername"
            app:layout_constraintStart_toStartOf="@+id/TextInputDaftarUsername"
            app:layout_constraintTop_toBottomOf="@+id/TextInputDaftarUsername">

            <EditText
                android:id="@+id/daftar_nohp"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text"
                android:drawableStart="@drawable/nohp"
                android:drawablePadding="30px"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="Nomor HP"
                android:inputType="phone"
                android:paddingStart="70px"
                android:paddingEnd="70px"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputDaftarUsername"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <EditText
                android:id="@+id/daftar_user"
                android:layout_width="341dp"
                android:layout_height="57dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text"
                android:drawableStart="@drawable/user"
                android:drawablePadding="30px"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="Nama Pengguna"
                android:inputType="textPersonName"
                android:paddingLeft="70px"
                android:paddingEnd="70px"
                android:textColorHint="#615151"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>